{
  "name": "tuffed-puffins",
  "version": "0.1.1",
  "private": true,
  "author": {
    "name": "Tufted Puffins Inc"
  },
  "description": "Tufted Puffins on the Run",
  "main": "src/start.js",
  "homepage": "./",
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "foreman": "^3.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-image-gallery": "^0.8.13",
    "react-player": "^1.9.3",
    "react-scripts": "2.1.5"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "nf start -p 3000",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "react-start": "BROWSER=none react-scripts start",
    "pack": "build --dir",
    "dist": "npm run build && build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^20.38.5"
  },
  "build": {
    "appId": "com.tuffed.puffins",
    "productName": "Tufted Puffins",
    "copyright": "Copyright Â© 2019 ${author}",
    "dmg": {
      "title": "${productName} ${version} Installer",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/favicon.ico"
    },
    "directories": {
      "buildResources": "public"
    }
  }
}
