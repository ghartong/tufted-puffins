{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "react/jsx-indent-props": [2, 4],
        "react/jsx-one-expression-per-line": "off",
        "react/jsx-filename-extension": "off",
        "react/prefer-stateless-function": "off",
        "operator-linebreak": "off",
        "comma-dangle": 0,
        "prefer-destructuring":  ["error", {"object": false, "array": false}],
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-continue": "off",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ]
}